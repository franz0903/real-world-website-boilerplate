header.GlobalHeader(class= page.isHome && 'GlobalHeader--home')
  h1
    if page.isHome
      = file.meta.siteTitle
    else
      a(href= absPath('/'))= file.meta.siteTitle
  nav
    ul
      each link in file.siteNavigation.navLinks
        li
          a(href= absPath(link[1]), class= page.path === link[1] && 'is-active')= link[0]
